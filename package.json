{
  "name": "node-template",
  "version": "1.0.0",
  "description": "Barebones repo template for node.js apps",
  "main": "index.js",
  "scripts": {
    "presetup": "cd .bin/cli && npm ci --prod",
    "setup": "node .bin/cli/setup.js",
    "postsetup": "npm ci",
    "test": "jest",
    "lint": "eslint --fix . && prettier --write .",
    "start": "node index.js",
    "release": "dotenv release-it",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nielse63/node-template.git"
  },
  "keywords": [
    "node",
    "template",
    "github-template"
  ],
  "author": {
    "name": "Erik Nielsen",
    "email": "erik@312development.com"
  },
  "license": "Apache License 2.0",
  "bugs": {
    "url": "https://github.com/nielse63/node-template/issues"
  },
  "homepage": "https://github.com/nielse63/node-template#readme",
  "engines": {
    "node": ">=14",
    "npm": ">=6"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "fs-extra": "^11.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.2",
    "prettier": "^3.4.2",
    "release-it": "^18.1.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,html}": [
      "prettier --write"
    ]
  }
}
